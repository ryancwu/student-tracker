{
  "name": "student-tracker",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-packager . YourAppName --platform=win32 --arch=x64 --out=release-builds --overwrite",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.ryanwu.student-tracker",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "files": [
      "node_modules/**/*",
      "main.js",
      "index.html",
      "styles.css",
      "package.json"
    ]
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "electron-packager": "^17.1.2"
  }
}
