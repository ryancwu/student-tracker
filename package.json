{
  "name": "student-tracker",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.ryanwu.student-tracker",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis", 
      "icon": "icon.ico"
    },
    "files": [
      "node_modules/**/*",
      "main.js",
      "index.html",
      "styles.css",
      "package.json"
    ]
  },
  "dependencies": {
    "electron": "^25.3.0"
  },
  "devDependencies": {
    "electron-builder": "^23.6.0"
  }
}
